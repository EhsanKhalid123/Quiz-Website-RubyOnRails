    <label ><%= @data[0]["answers"]["answer_d"] %></label><br>

    <input type="radio" name="<%= @data[0]["question"] %>" value="<%= @data[0]["answers"]["answer_e"] %>">
    <label ><%= @data[0]["answers"]["answer_e"] %></label><br>

    <input type="radio" name="<%= @data[0]["question"] %>" value="<%= @data[0]["answers"]["answer_f"] %>">
